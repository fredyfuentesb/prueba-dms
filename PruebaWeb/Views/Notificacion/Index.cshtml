@using Transversal.Dtos
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<Tipo_NotificacionesDto> tipos = ViewBag.tipos;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Configuracion Notificaciones</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Notificaciones</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-user"></i>
                    Nuevo Usuarios
                </h3>
            </div>
            <form action="/Usuario/Save" method="post" autocomplete="off" id="fromUsuario">
                <div class="card-body row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label for="nombre">Tipo Notificacion</label>
                            <select class="form-control" id="id_tipo_notificacion" name="id_tipo_notificacion">
                                @foreach(Tipo_NotificacionesDto tipo in tipos)
                                {
                                    <option value="@tipo.id">@tipo.nombre</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="file" class="form-control prospects-file" id="file-prospects" name="file" />                            
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</section>