@using Transversal.Dtos
@{
    ViewBag.Title = "Archivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    TercerosDto tercero = ViewBag.tercero;
}
<script src="~/Scripts/jquery-progress-upload.js"></script>
<script src="~/Scripts/app/terceroArchivo.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Archivos de @tercero.nombre @tercero.apellidos</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Archivos</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-file"></i>
                    Nuevo Archivo
                </h3>
            </div>
            <form action="/Tercero/SaveFile" method="post" autocomplete="off" id="fromTerceroArchivo">
                <div class="card-body row">    
                    <input type="hidden" id="id_tercero" name="id_tercero" value="@tercero.id" />
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="file" class="form-control prospects-file" id="file-prospects" name="file" />
                        </div>
                    </div>                 
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label for="es_foto">¿Es una foto?</label>
                            <select class="form-control" id="es_foto" name="es_foto" onchange="cambiarTipo()">
                                <option value="false">NO</option>
                                <option value="true">SI</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" id="uploadButton0">Guardar</button>
                </div>
            </form>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12" style="display: none;" id="dvLoaderArchivos">
            <center><div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div></center>
        </div>
        <div class="container-fluid" style="display: none;" id="dvArchivos">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-file"></i>
                        Archivos Registrados
                    </h3>
                </div>
                <div class="card-body" style="overflow-x:auto;">
                    <table class="display responsive nowrap" style="width:100%" id="archivosRegistrados">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="eliminarArchivoModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Eliminar <b id="titleModalEliminar"></b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body row">
                <p>¿Esta seguro que desa eliminar a <b id="nombreEliminar"></b>? Esta operación no se puede reversar</p>
                <input type="hidden" class="form-control" id="id3" name="id" />                
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-danger" onclick="confirmarEliminacion()">Eliminar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>